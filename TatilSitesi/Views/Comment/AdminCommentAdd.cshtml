@using TatilSitesi.Models
@model IEnumerable<Comment>
@{
    ViewData["Title"] = "Yorum Ekleme Formu";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm("AdminCommentAdd", "Comment", FormMethod.Post))
    {
        <center class="mb-2">
            <textarea required type="text" style="width:50%;padding: 4px 10px;outline:none;" name="CommentText" placeholder="Filmin Adını Türkçe Giriniz."></textarea>
        </center>
        <center class="mb-2">
            @await Component.InvokeAsync("ListCommentUser")
        </center>
        <center class="mb-2">
            @await Component.InvokeAsync("ListCommentHotel")
        </center>
        <center>
            <button style="padding: 4px 10px;margin-left:-10px;" class="btn-success text-center"><i class="fa fa-plus"></i></button>
        </center>      
    }
</div>