<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <div style="display:flex" class="col-12 text-center justify-content-center mt-4">
        <div class="col-7">
            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger">
                    @ViewData["ErrorMessage"]
                </div>
            }
        </div>
    </div>
    <div style="display:flex" class="col-12 text-center justify-content-center">
        <div class="col-7">
            <form action="/Admin/AdminAdd/" method="post">
                <center class="mb-2">
                    <input type="text" style="width:100%;padding: 4px 10px;outline:none" name="AdminName" placeholder="Eklemek İstediğiniz Yönetici Adını Giriniz." required />
                </center>
                <center class="mb-2">
                    <input type="password" style="width:100%;padding: 4px 10px;outline:none" name="AdminPassword" placeholder="Eklemek İstediğiniz Yönetici Parolasını Giriniz." required />
                </center>
                <center>
                    <input class="text-center btn-success" style="padding: 4px 10px;margin-left:-10px;" type="submit" value="Ekle" />
                </center>
            </form>
        </div>
    </div>
