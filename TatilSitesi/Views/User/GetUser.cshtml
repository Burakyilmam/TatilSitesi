@model TatilSitesi.Models.User
@{
    ViewData["Title"] = "Kullanıcı Güncelleme Formu";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mt-3 mb-3">Kategori Güncelleme Formu</h2>
    @using (Html.BeginForm("UserUpdate", "User", FormMethod.Post))
    {
        @Html.TextBoxFor(x=>x.UserId,new {@style="display:none;"})
        <center class="mb-2">@Html.TextBoxFor(x=>x.UserRealName,new {@style="padding: 4px 10px;margin-left:-10px;width:50%;"})</center>
        <center class="mb-2">@Html.TextBoxFor(x=>x.UserSurname,new {@style="padding: 4px 10px;margin-left:-10px;width:50%;"})</center>
        <center class="mb-2">
            @Html.DropDownList("UserGender", new List<SelectListItem>
        {
        new SelectListItem { Value = "Kadın", Text = "Kadın" },
        new SelectListItem { Value = "Erkek", Text = "Erkek" },
        new SelectListItem { Value = "Diğer", Text = "Diğer" }
        }, "-- Seçiniz --", new {@style="padding: 4px 10px;margin-left:-10px;width:50%"})
        </center>
        <center class="mb-2">@Html.TextBoxFor(x=>x.UserPhoneNumber,new {@style="padding: 4px 10px;margin-left:-10px;width:50%;"})</center>
        <center class="mb-2">@Html.TextBoxFor(x=>x.UserEmail,new {@style="padding: 4px 10px;margin-left:-10px;width:50%;"})</center>
        <center class="mb-2">@Html.TextBoxFor(x=>x.UserName,new {@style="padding: 4px 10px;margin-left:-10px;width:50%;"})</center>
        <center class="mb-2">@Html.TextBoxFor(x=>x.UserPassword,new {@style="padding: 4px 10px;margin-left:-10px;width:50%;"})</center>
        <center>
            @Html.DropDownList("UserStatu", new List<SelectListItem>
        {
        new SelectListItem { Value = "True", Text = "Aktif" },
        new SelectListItem { Value = "False", Text = "Pasif" }
        }, "-- Seçiniz --", new {@style="padding: 4px 10px;margin-left:-10px;width:50%"})
        </center>
        <center class="mt-2">
            <button style="padding: 4px 10px;margin-left:-10px;" class="btn-success text-center">Güncelle</button>
        </center>
    }
</div>