@model TatilSitesi.Models.Hotel
@{
    ViewData["Title"] = "Hotel Ekleme Formu";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mt-3 mb-3">Otel Ekleme Formu</h2>
    @using (Html.BeginForm("HotelAdd", "Hotel", FormMethod.Post))
    {
        <center class="mb-2">
            <input required type="text" style="width:50%;padding: 4px 10px;outline:none" name="HotelName" placeholder="Otel Adını Türkçe Giriniz.">
            </center>
        <center class="mb-2">
            <input required type="text" style="width:50%;padding: 4px 10px;outline:none" name="HotelAddres" placeholder="Otelin Adresini Giriniz.">
        </center>
        <center class="mb-2">
            <input required type="text" style="width:50%;padding: 4px 10px;outline:none" name="HotelDescription" placeholder="Otel Açıklmasını Giriniz.">
        </center>
        <center class="mb-2">
            <input required type="text" style="width:50%;padding: 4px 10px;outline:none" name="HotelRating" placeholder="Otel Puanını Giriniz.">
        </center>
        <center class="mb-2">
            <input required type="text" style="width:50%;padding: 4px 10px;outline:none" name="HotelThumbnailImageUrl" placeholder="Otelin Resim Url'sini Giriniz.">
        </center>
        <center class="mb-2">
            <input required type="text" style="width:50%;padding: 4px 10px;outline:none" name="HotelStar" placeholder="Otel Kaç Yıldız Olduğunu Giriniz.">
        </center>
        <center class="mb-2">
            @await Component.InvokeAsync("ListHotelCategory")
        </center>
        <center class="mb-2">
            @await Component.InvokeAsync("ListHotelCity")
        </center>
        <center class="mb-2">
            <div>
                <button style="padding: 4px 10px;" class="btn-success text-center"><i class="fa fa-plus"></i></button>
            </div>
        </center>
    }
</div>